<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Jogadores</h3>
  </div>
  <div class="panel-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Nome</th>
          <th>Ativo</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @jogadores.each do |jogador| %>
          <tr>
            <td><%= jogador.nome %></td>
            <td><%= (jogador.ativo == true ? "<i class='fa fa-check' aria-hidden='true'></i> Ativo" : "<i class='fa fa-times' aria-hidden='true'></i> Inativo").html_safe %></td>
            <td><%= link_to 'Visualizar', jogador, class: 'btn btn-default' %></td>
            <td><%= link_to 'Editar', edit_jogador_path(jogador), class: 'btn btn-default' %></td>
            <td><%= link_to 'Deletar', jogador, method: :delete, data: { confirm: 'Deseja deletar?' }, class: 'btn btn-default' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>
    <%= link_to 'Cadastrar Jogador', new_jogador_path, class: 'btn btn-default' %>
    <%= link_to '<i class="fa fa-print" aria-hidden="true"></i> Gerar Ficha Jogadores'.html_safe, lista_jogadores_jogadores_path, class: 'btn btn-default', target: '_blank' %>
  </div>
</div>

