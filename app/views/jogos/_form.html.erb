<script type="text/javascript">
  $(document).ready(function() {
    $('#jogo_dia').mask('99/99/9999');
  });
</script>

<%= form_for(@jogo) do |f| %>
  <div class="row">
    <div class="col-md-3">
      <%= f.label :dia %><br>
      <%= f.text_field :dia, value: (@jogo.new_record? ? '' : @jogo.try(:dia).strftime('%d-%m-%Y')), class: 'form-control', required: true %>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-md-3">
      <%= f.label :tipo_jogo, "Tipo de Jogo" %><br>
      <%= f.select :tipo_jogo, ['Amistoso', 'Campeonato', 'Racha'], {:prompt => 'Selecione'}, {:class => 'form-control'} %>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-md-3">
      <%= f.label :despesa, "Despesa (R$)" %><br>
      <%= f.text_field :despesa, class: 'form-control' %>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-md-8">
      <%= f.label :descricao_despesa, "Descrição da Despesa" %><br>
      <%= f.text_field :descricao_despesa, class: 'form-control' %>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-md-8">
      <%= f.label :sumula, "Súmula" %><br>
      <%= f.url_field :sumula, class: 'form-control' %>
    </div>
  </div>
  <br>
  <div class="actions">
    <%= f.submit 'Salvar', class: 'btn btn-sm btn-success' %>
    <%= link_to 'Voltar', jogos_path, class: 'btn btn-sm btn-default' %>
  </div>
<% end %>