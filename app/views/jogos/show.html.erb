<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Jogo</h3>
  </div>
  <div class="panel-body">
		<p>
		  <strong>Dia:</strong>
		  <%= @jogo.dia.strftime('%d/%m/%Y') if !@jogo.dia.nil? %>
		</p>

		<p>
		  <strong>Tipo de Jogo:</strong>
		  <%= @jogo.tipo_jogo %>
		</p>

		<p>
		  <strong>Despesa:</strong>
		  <%= number_to_currency(@jogo.despesa) %>
		</p>

		<p>
		  <strong>Descrição da Despesa:</strong>
		  <%= @jogo.descricao_despesa %>
		</p>
		
		<p>
		  <strong>Súmula:</strong>
		  <a href="<%= @jogo.sumula %>" target="_blank"><%= @jogo.sumula || "Não Informado" %></a>
		</p>

		<%= link_to 'Editar', edit_jogo_path(@jogo), class: 'btn btn-sm btn-default' %>
		<%= link_to 'Voltar', jogos_path, class: 'btn btn-sm btn-default' %>
  </div>
</div>
