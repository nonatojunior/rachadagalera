<!DOCTYPE html>
<html>
	<head>
		<meta name="viewport" content="width=device-width, initial-scale=1">

	  <title>Racha da Galera</title>
	  <%= favicon_link_tag image_path('bola.png') %>
	  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	  <%= csrf_meta_tags %>
	</head>
	<body>
		<nav class="navbar navbar-default">
		  <div class="container-fluid">
		    <!-- Brand and toggle get grouped for better mobile display -->
		    <div class="navbar-header">
		      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
		        <span class="sr-only">Toggle navigation</span>
		        <span class="icon-bar"></span>
		        <span class="icon-bar"></span>
		        <span class="icon-bar"></span>
		      </button>
		      <%= link_to("<i class='fa fa-futbol-o' aria-hidden='true'></i> Racha da Galera".html_safe, home_index_path, class: "navbar-brand") %>
		    </div>

		    <% if !usuario_signed_in? %>
			    <!-- Collect the nav links, forms, and other content for toggling -->
			    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
			      <ul class="nav navbar-nav">
			        <li><%= link_to "<i class='fa fa-bar-chart' aria-hidden='true'></i> Artilheiros".html_safe, artilharia_jogos_jogadores_path %></li>
			        <li><%= link_to "<i class='fa fa-list-ol' aria-hidden='true'></i> Jogos".html_safe, index_usuario_jogos_path %></li>
			        <li><%= link_to "<i class='fa fa-user' aria-hidden='true'></i> Jogadores".html_safe, index_usuario_jogadores_path %></li>
			      </ul>
			      <ul class="nav navbar-nav navbar-right">
			        <li><%= link_to "<i class='fa fa-user' aria-hidden='true'></i> Administrador".html_safe, usuario_session_path %></li>
			      </ul>
			    </div><!-- /.navbar-collapse -->
			  <% else %>
			  	<!-- Collect the nav links, forms, and other content for toggling -->
			    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
			      <ul class="nav navbar-nav">
			        <li><%= link_to "<i class='fa fa-bar-chart' aria-hidden='true'></i> Artilheiros".html_safe, artilharia_jogos_jogadores_path %></li>
			        <li><%= link_to "<i class='fa fa-list-ol' aria-hidden='true'></i> Jogos".html_safe, jogos_path %></li>
			        <li><%= link_to "<i class='fa fa-user' aria-hidden='true'></i> Jogadores".html_safe, jogadores_path %></li>
			        <li><%= link_to "<i class='fa fa-users' aria-hidden='true'></i> Sortear Times".html_safe, sortear_time_jogos_jogadores_path %></li>
			      </ul>
			      <ul class="nav navbar-nav navbar-right">
			        <li class="dropdown">
			          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="fa fa-user" aria-hidden="true"></i> <%= "#{current_usuario.email}" %> <span class="caret"></span></a>
			          <ul class="dropdown-menu">
			            <li><%= link_to "<i class='fa fa-power-off' aria-hidden='true'></i> Sair".html_safe, destroy_usuario_session_path, method: "delete" %></li>
			          </ul>
			        </li>
			      </ul>
			    </div><!-- /.navbar-collapse -->
			  <% end %>
		  </div><!-- /.container-fluid -->
		</nav>

		<div class="container-fluid">
		  <div class="pagetitle">
		    <h3><%= content_for?(:title) ? yield(:title) : "" %></h3>
		  </div>
		  <div class="container">
		    <%= yield %>
		    <br><br>
		  </div>
		</div>
	</body>
</html>