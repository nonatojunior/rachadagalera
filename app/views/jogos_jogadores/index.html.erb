<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Informações dos Jogadores no Jogo</h3>
  </div>
  <div class="panel-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Jogo</th>
          <th>Jogador</th>
          <th>Gol</th>
          <th>Cota</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @jogos_jogadores.each do |jogos_jogador| %>
          <tr>
            <td><%= jogos_jogador.jogo.dia.strftime('%d/%m/%Y') if !jogos_jogador.jogo.nil? && !jogos_jogador.jogo.dia.nil? %></td>
            <td><%= jogos_jogador.jogador.nome if !jogos_jogador.jogador.nil? && !jogos_jogador.jogador.nome.nil? %></td>
            <td><%= jogos_jogador.gol %></td>
            <td><%= number_to_currency(jogos_jogador.cota, unit: "R$", separator: ",", delimiter: "") %></td>
            <td><%= link_to 'Visualizar', jogos_jogador, class: 'btn btn-sm btn-default' %></td>
            <td><%= link_to 'Editar', edit_jogos_jogador_path(jogos_jogador), class: 'btn btn-sm btn-default' %></td>
            <td><%= link_to 'Deletar', jogos_jogador, method: :delete, data: { confirm: 'Deseja deletrar?' }, class: 'btn btn-sm btn-default' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>
    <%= link_to 'Cadastrar Informações do Jogador no Jogo', new_jogos_jogador_path, class: 'btn btn-sm btn-default' %>
  </div>
</div>
