<table class="table table-hover">
	<thead>
		<tr>
			<th>Jogador</th>
			<th>Qtdd Gols</th>
			<th>Cota (R$)</th>
		</tr>
	</thead>
	<tbody>
		<% @lista_jogadores_jogo.each do |jogador| %>
			<tr>
				<td><%= jogador.jogador.nome if !jogador.jogador_id.nil? %></td>
				<td><%= jogador.gol if !jogador.gol.nil? %></td>
				<td><%= number_to_currency(jogador.cota) if !jogador.cota.nil? %></td>
				<td>
					<%= link_to 'Deletar', jogos_jogador_path(jogador), method: :delete, class: 'btn btn-sm btn-danger' %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>